<odoo>
    <data>
        <record id="view_employee_form" model="ir.ui.view">
            <field name="name">hr.employee.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form" />
            <field name="arch" type="xml">
                <xpath  expr="//div[hasclass('oe_title')]/h1" position="after">
                    <field name="first_name" placeholder="First name" class="oe_inline"/> <span style="padding-left: 10px"/>
                    <field name="middle_name" placeholder="Middle name" class="oe_inline"/> <span style="padding-left: 10px"/>
                    <field name="last_name" placeholder="Last name" class="oe_inline"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>