<odoo>
  <data>
    <record model="ir.ui.view" id="training_program_document_search">
      <field name="name">training.program.document.search</field>
      <field name="model">training.program.document</field>
      <field name="arch" type="xml">
        <search>
          <field name="name"/>
          <field name="employee_id"/>
          <field name="attachment_name"/>
          <field name="program_id"/>
          <group expand="0" string="Group By">
            <filter string="Employee" name="group_employee" domain="[]" context="{'group_by':'employee_id'}" />
            <filter string="Type" name="group_type" domain="[]" context="{'group_by':'document_type_id'}" />
            <filter string="Program" name="group_program" domain="[]" context="{'group_by':'program_id'}" />
          </group>
        </search>
      </field>
    </record>

    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="training_program_document_tree">
      <field name="name">training.program.document.tree</field>
      <field name="model">training.program.document</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="employee_id"/>
          <field name="document_type_id"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="training_program_document_form">
      <field name="name">training.program.document.form</field>
      <field name="model">training.program.document</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
            <div class="oe_title oe_inline">
              <label for="name"/>
              <h1><field name="name" placeholder="Document No." required="1"/></h1>
            </div>
            <group>
              <group>
                <field name="document_type_id" options="{'no_create_edit': True}" required="1"/>
                <field name="document_type_type" invisible="1"/>
                <field name="program_id" options="{'no_create_edit': True}" />
                <field name="employee_id" options="{'no_create_edit': True}" />
              </group>
              <group>
                <field name="ishihara_result" attrs="{'invisible': [('document_type_type', '!=', 'ishihara_test')], 'required': [('document_type_type', '=', 'ishihara_test')]}"/>
                <field name="date_expiry"/>
                <field name="company_id" groups="base.group_multi_company" options="{'no_create_edit': True}"/>
                <field name="active" invisible="1"/>
                <field name="attachment_name" invisible="1"/>
                <field name="attachment" widget="binary" filename="attachment_name"/>
              </group>
            </group>

          </sheet>
          <div class="o_attachment_preview"/>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
            <field name="message_ids" widget="mail_thread"/>
            <field name="activity_ids"/>
          </div>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->
    <record id="action_training_program_documents" model="ir.actions.act_window">
      <field name="name">Training Document</field>
      <field name="res_model">training.program.document</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record id="action_open_training_program_documents" model="ir.actions.act_window">
      <field name="name">Training Document</field>
      <field name="res_model">training.program.document</field>
      <field name="view_mode">tree,form</field>
      <field name="domain">[('program_id', '=', active_id)]</field>
      <field name="context">{'default_program_id': active_id}</field>
    </record>
  </data>
</odoo>