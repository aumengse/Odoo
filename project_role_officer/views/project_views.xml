<odoo>
  <data>

    <record model="ir.ui.view" id="view_project_kanban_custom">
      <field name="name">project.project.kanban.custom</field>
      <field name="model">project.project</field>
      <field name="inherit_id" ref="project.view_project_kanban"/>
      <field name="arch" type="xml">
        <xpath expr="//div[hasclass('o_kanban_card_manage_pane')]" position="attributes">
          <attribute name="groups" eval="[(4, ref('project.group_project_manager')),(4, ref('project_role_officer.group_project_officer'))]"/>
        </xpath>
        <xpath expr="//a[hasclass('o_kanban_manage_toggle_button')]" position="attributes">
          <attribute name="groups" eval="[(4, ref('project.group_project_manager')),(4, ref('project_role_officer.group_project_officer'))]"/>
        </xpath>
      </field>
    </record>

  </data>
</odoo>