<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!--FACILITY-->
        <record id="module_category_osynx_loan" model="ir.module.category">
            <field name="name">Loan</field>
            <field name="description">Helps you manage your Loan</field>
            <field name="sequence">100</field>
        </record>

        <record id="group_loan_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_osynx_loan"/>
        </record>

        <record id="group_loan_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_osynx_loan"/>
            <field name="implied_ids" eval="[(4, ref('group_loan_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
    </data>
</odoo>