<odoo>
    <record id="payment_success" model="website.page">
        <field name="url">/payment-successful</field>
        <field name="is_published">True</field>
        <field name="website_indexed" eval="False"/>
        <field name="name">Thank You</field>
        <field name="type">qweb</field>
        <field name="key">osynx_loan.payment_success</field>
        <field name="website_id" ref="website.default_website"/>
        <field name="arch" type="xml">
            <t name="Thank you" t-name="osynx_loan.payment_success">
                <t t-call="website.layout">
                    <div id="wrap">
                        <div class="oe_structure">
                            <div class="container">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <h1 class="text-center">Thank you!</h1>
                                        <p class="text-center">
                                            Your contribution has been submitted successfully.
                                        </p>
                                    </div>
                                </div>
                                <div class="row" id="o_recruitment_thank_cta">
                                    <div class="col-lg-12 text-center mt32 mb32">
                                        <a role="button" href="/submit/payment" class="btn btn-primary btn-lg">Submit New Payment</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </field>
    </record>
</odoo>