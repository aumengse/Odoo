<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paperformat_euro_landscape" model="report.paperformat">
            <field name="name">A4 Landscape</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">25</field>
            <field name="margin_bottom">32</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">20</field>
            <field name="dpi">90</field>
        </record>

        <record id="action_report_training_participant_draft" model="ir.actions.report">
            <field name="name">List of Training Participants (Draft)</field>
            <field name="model">training.program</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">asec_customs.report_training_participant_draft</field>
            <field name="report_file">asec_customs.report_training_participant_draft</field>
            <field name="print_report_name">'List of Training Participant (Draft)'</field>
            <field name="binding_model_id" ref="asec_customs.model_training_program"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="paperformat_euro_landscape"/>
        </record>
        <record id="action_report_training_participant_final" model="ir.actions.report">
            <field name="name">List of Training Participants (Final)</field>
            <field name="model">training.program</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">asec_customs.report_training_participant_final</field>
            <field name="report_file">asec_customs.report_training_participant_final</field>
            <field name="print_report_name">'List of Training Participant (Final)'</field>
            <field name="binding_model_id" ref="asec_customs.model_training_program"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="paperformat_euro_landscape"/>
        </record>
    </data>
</odoo>